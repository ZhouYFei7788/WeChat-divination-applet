.fortune-container {
  box-sizing: border-box;
  padding-top: env(safe-area-inset-top); /* 空出刘海屏的距离 */
  height: 105vh;
  overflow: hidden;
  position: relative;
}

/* 背景图片样式 */
.fortune-container .fortune-bg {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.fortune-container .fortune-bg image {
  width: 100%;
  height: 100%;
  transform: scaleY(1.1);
}
/* top 区域 */
.fortune-test {
  box-sizing: border-box;
  padding-left: 10rpx;
  width: 100%;
  position: relative;
  margin-bottom: 30rpx;
}
.fortune-test .workplace {
  position: relative;
  width: 240rpx;
  height: 130rpx;
}
.fortune-test .fortune-text-bg {
  position: absolute;
  width: 100%;
  height: 100%;
}
.fortune-test .fortune-text {
  position: absolute;
  top: 30rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 180rpx;
  height: 90rpx;
}
/* 江湖 */
.fortune-test .font1 {
  position: absolute;
  top: 65rpx;
  left: 270rpx;
  width: 120rpx;
  height: 60rpx;
}
/* 随意而成 */
.fortune-test .font2 {
  position: absolute;
  top: 115rpx;
  left: 440rpx;
  width: 250rpx;
  height: 60rpx;
}
/* 横线 */
.fortune-test .line {
  width: 100%;
  height: 50rpx;
}
/* 鸟 */
.fortune-test .bird {
  position: absolute;
  right: 10rpx;
  bottom: -20rpx;
  width: 200rpx;
  height: 150rpx;
}

/* 主体部分 */
.body {
  width: 100%;
  height: 75vh;
  /* border: 2rpx solid #000; */
  position: relative;
  overflow: hidden;
} 
/* 边框部分 */
.body .border {
  position: absolute;
  top: -36rpx;
  left: -138rpx;
  width: 136vw;
  height: 104%;
}
/* 文字背景 */
.body .textBg {
  position: absolute;
  height: 420rpx;
  top: 100rpx;
  right: 40rpx;
}
/* 大师 */
.body .master {
  position: absolute;
  top: 120rpx;
  left: 30rpx;
  width: 320rpx;
  height: 400rpx;
}
/* 彩条 */
.body .line2 {
  position: absolute;
  top: 520rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 90%;
  height: 40rpx;
}
/* 文字区域 */
.body .textcenter {
  position: absolute;
  top: 160rpx;
  right: 90rpx;
  width: 330rpx;
}
.body .textcenter text {
  font-family: "仓耳舒圆体";
  font-size: 38rpx;
}
.body .textcenter .title {
  display: block;
}
.body .textcenter .content {
  margin-top: 10rpx;
  display: block;
  text-indent: 2em;
}

.fire {
  position: fixed;
  top: 0rpx;
  left: 0rpx;
  z-index: 10;
  width: 100vh;
  height: 100vh;
  background-color: rgba(0, 0, 0, .5);
}
.fire image {
  width: 600rpx;
  height: 700rpx;
  position: relative;
  top: 50%;
  left: 23%;
  transform: translate(-50%, -50%);
}

/* body 的下班部分 */
.body .bottom {
  position: absolute;
  left: 50%;
  bottom: 140rpx;
  transform: translateX(-50%);
  width: 86%;
  background: rgba(255, 255, 255, .4);
  border-radius: 30rpx;
  text-align: center;
}
/* 龟壳 */
.body .bottom image {
  width: 400rpx;
}
.body .btn {
  position: absolute;
  bottom: 30rpx;
  left: 50%;
  transform: translateX(-50%);
  font-size: 70rpx;
  font-family: "仓耳舒圆体";
  color: #fff;
  font-weight: 600;
}

/* footer */
.footer {
  margin-top: 40rpx;
  width: 100%;
  text-align: center;
}
.footer text {
  font-size: 36rpx;
  color: #fff;
}
.footer image{
  margin-top: 10rpx;
  width: 80%;
  height: 40rpx;
}

